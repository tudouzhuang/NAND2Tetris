/**
 * A 16-bit counter.
 * if      reset(t): out(t+1) = 0
 * else if load(t):  out(t+1) = in(t)
 * else if inc(t):   out(t+1) = out(t) + 1
 * else              out(t+1) = out(t)
 */
CHIP PC {
    IN in[16], reset, load, inc;
    OUT out[16];
    
    PARTS:
    Register(in=out3 , load=true , out=out4 );
    Add16(a = out4, b[0] = true, out = outplus);
    Mux16(a=in , b=outplus , sel=inc , out=out1 );
    Mux16(a=out1 , b=in , sel=load , out=out2 );
    Mux16(a=out2 , b=false , sel=reset , out=out3 );
    Or16(a=false , b=out4 , out=out );

}